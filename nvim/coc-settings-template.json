{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [".ccls-root", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "clang": {
                    "resourceDir": "/usr/lib64/clang/10.0.1"
                }, 
                "highlight": { 
                    "lsRanges" : true 
                },
                "index": {
                    "threads": 6
                }
            }
        }
    }
}
